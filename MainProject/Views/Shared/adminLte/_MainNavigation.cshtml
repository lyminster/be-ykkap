<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="~/Login/Home" class="brand-link">
        <img src="~/img/newlogo.jpg" alt="AdminLTE Logo" class="brand-image"
             style="opacity: .8">
        <span class="brand-text font-weight-light">YKKAP YES Catalog</span>
    </a>
    <!-- Sidebar -->
    <div class="sidebar">

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                with font-awesome or any other icon font library -->
                <li class="nav-item has-treeview menu-open">
                    <ul class="nav nav-treeview">

                        @{
                            var hasil = Context.User.Claims.FirstOrDefault(x => x.Type == "UserType").Value;




                            if (hasil == "1" || hasil == "0")
                            {

                                <li class="nav-header">MOBILE APPS MENU</li>

                                <li class="nav-item">
                                    <a asp-area="Master" asp-controller="CompanyProfile" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Company Profile</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="Master" asp-controller="Catalog" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Catalog</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="Master" asp-controller="CatalogType" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Catalog Type</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="Master" asp-controller="Project" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Project</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="Master" asp-controller="ProjectType" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Project Type</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="Master" asp-controller="Showroom" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Showroom</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="Master" asp-controller="SocialMedia" asp-action="EditNew" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Social Media</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="Master" asp-controller="Visitors" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Visitors</p>
                                    </a>
                                </li>
                            }

                        }

                        @if (hasil == "1")
                        {
                            <li class="nav-header">ADMIN MENU</li>
                            <li class="nav-item">
                                <a asp-area="Master" asp-controller="User" asp-action="Index" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>User Management</p>
                                </a>
                            </li>
                        }





                    </ul>
                </li>

                <li class="nav-header"> </li>
                <li class="nav-item">

                    <a href="javascript:void(0)" onclick="Logout()" class="nav-link">
                        <i class="nav-icon fas fa-sign-out-alt"></i>
                        <p>
                            Logout
                        </p>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>