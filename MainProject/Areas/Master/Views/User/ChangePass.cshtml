@model ViewModel.ViewModels.ChangePass

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}


<div class="">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Change Password</h1>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- new vendor form -->
            <form asp-action="ChangePass">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <div class="card card-warning">
                            <div class="card-header">
                                <h3 class="card-title">Input your new Password</h3>
                                @*<a style="float:right;" asp-action="Index">Back to List</a>*@
                            </div>
                            <div class="card-body">
                                <div class="form-group col-md-12">
                                    <label asp-for="newPassword" class="control-label">New Password</label>
                                    <input type="password" asp-for="newPassword" class="form-control" />
                                    <span asp-validation-for="newPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-12">
                                    <label asp-for="newPasswordConfirm" class="control-label">Confirm Password</label>
                                    <input type="password" asp-for="newPasswordConfirm" class="form-control" />
                                    <span asp-validation-for="newPasswordConfirm" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="card-footer row">
                                <div class="form-group col-md-12">
                                    <input type="submit" value="Save Password" class="btn btn-success btn-block" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <!-- new vendor form -->

        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

@section myScripts{
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script>
        $(document).ready(function () {

            $("form").submit(function () {

                ShowLoading();

            });

            @if (TempData["notification"] != null)
            {
                @Html.Raw(TempData["notification"])
            }

        });

    </script>

}